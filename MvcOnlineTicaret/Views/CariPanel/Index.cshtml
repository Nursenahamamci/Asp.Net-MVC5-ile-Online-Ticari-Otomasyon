@model MvcOnlineTicaret.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>Cari Bilgi Paneli</h2>
@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{
<table class="table table-hover">
    <tr>
        <td>
            <label>Mail Adresi: @HttpContext.Current.User.Identity.Name</label>
        </td>
    </tr>
    <tr>
        <td>
            <label>@Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</label>
        </td>
    </tr>
    <tr>
        <td>
            <label>@Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</label>
        </td>
    </tr>
    <tr>
        <td>
            <label>@Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</label>
        </td>
    </tr>
    <tr>
        <td>
            <label>@Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</label>
        </td>
    </tr>
</table>
<button class="btn-warning">Bilgilerimi Güncelle</button>
}
<br />
