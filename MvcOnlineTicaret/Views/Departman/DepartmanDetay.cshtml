@using MvcOnlineTicaret.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Detay Sayfası</h2>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı:@ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        
        <th> AD </th>
        <th> SOYAD</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    
    <td>@k.PersonelAd</td>
    <td>@k.PersonelSoyad</td>
    
    <td><a href="/Departman/DepartmanPersonelSatis/@k.PersonelId" class="btn btn-default" style="background-color:orangered">Satışlar</a></td>
</tr>
    }

</table>