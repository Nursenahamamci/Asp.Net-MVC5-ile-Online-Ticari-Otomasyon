@using MvcOnlineTicaret.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Personel Satış Sayfası</h2>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel: @ViewBag.dpers</li>
</ol>
<table class="table table-hover">
    <tr>
       
        <th>ÜRÜN</th>
        <th> CARİ </th>
        <th> FİYAT </th>
        
        <th> ADET</th>
        <th>TOPLAM TUTAR</th>
        <th> TARİH </th>

        <th>YAZDIR</th>
    </tr>
    @foreach (var ds in Model)
    {
<tr>
    
    <td>@ds.Urun.UrunAd</td>
    <td>@ds.Cariler.CariAd @ds.Cariler.CariSoyad</td>

    <td>@ds.Fiyat ₺</td>
    <td>@ds.Adet</td>
    <td>@ds.ToplamTutar </td>

    <td>@ds.Tarih</td>
    <td><a href="#" class=" btn btn-default" style="background-color:dodgerblue">YAZDIR</a></td>
</tr>
    }

</table>