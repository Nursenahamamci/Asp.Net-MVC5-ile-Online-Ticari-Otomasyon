<table class="table table-bordered" style="margin-top:20px;">
    <tr>

        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>DURUM</th>
        <th>KATEGORİ</th>

        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>


    @foreach (var u in Model)
    {
        <tr>

            <td>
                @u.UrunAd

            </td>
            <td>
                @u.Marka

            </td>
            <td>
                @u.Stok

            </td>
            <td>
                @u.AlisFiyat ₺

            </td>
            <td>
                @u.SatisFiyat ₺

            </td>
            <td>
                @u.Durum

            </td>

            <td>
                @u.Kategori.KategoriAd

            </td>

            <td>
                <a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Urun/UrunGuncelle/@u.UrunId" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Urun/UrunEkle/" class="btn btn-primary">Ürün Ekle</a>