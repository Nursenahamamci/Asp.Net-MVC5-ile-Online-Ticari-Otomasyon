@using MvcOnlineTicaret.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Fatura Kalemleri Sayfası</h2>


@*<ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Departman Adı:@ViewBag.d</li>
    </ol>*@
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>AÇIKLAMA</th>
        <th>MİKTAR</th>
        <th>BİRİM FİYAT</th>
        <th>TUTAR</th>

    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>
                @d.FaturaKalemId

            </td>
            <td>
                @d.Aciklama

            </td>
            <td>
                @d.Miktar

            </td>
            <td>
                @d.BirimFiyat

            </td>
            <td>
                @d.Tutar

            </td>


        </tr>
    }

</table>
