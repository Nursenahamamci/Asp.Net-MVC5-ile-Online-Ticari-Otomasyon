@model MvcOnlineTicaret.Models.Siniflar.Faturalar
@{
    ViewBag.Title = "FaturaGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Fatura Güncelleme Sayfası</h2>

<h2>Ürün Güncelleme Sayfası</h2>

<br />
@using (Html.BeginForm("GuncellemeIslemi", "Fatura", FormMethod.Post))
{
    //Controller tarafına null ddeger göndermemek için hidden kullanıldı

    @Html.HiddenFor(x => x.FaturaId)
    <br />
    @Html.LabelFor(x => x.FaturaSırano)
    @Html.TextBoxFor(x => x.FaturaSırano, new { @class = "form form-control" })
    <br />
    @Html.LabelFor(x => x.FaturaSeriNo)
    @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form form-control" })
    <br />

    @Html.LabelFor(x => x.VergiDairesi)
    @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form form-control" })
    <br />
    @Html.LabelFor(x => x.Saat)
    @Html.TextBoxFor(x => x.Saat, new { @class = "form form-control" })
    <br />

    @Html.LabelFor(x => x.TeslimEden)
    @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form form-control" })
    <br />

    @Html.LabelFor(x => x.TeslimAlan)
    @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form form-control" })
    <br />
    <button class=" btn btn-warning">Güncelle</button>
}
